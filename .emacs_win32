;; Insertion of Dates.
(defun insert-date-string ()
  "Insert a nicely formated date string."
  (interactive)
  (insert (format-time-string "liujun, %Y-%m-%d %H:%M")))

;; C-c i calls insert-date-string
(global-set-key (kbd "C-c i") 'insert-date-string)

